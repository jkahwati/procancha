	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="procancha.app.login.mappers.UsuariosMapper">
	<!-- Obtener datos del cliente por el rut -->
	<select id="findByRut"
		resultType="procancha.app.login.entity.Usuario">
		SELECT id_usuario, descripcion, rut from usuarios INNER JOIN roles ON usuarios.id_rol = roles.id_rol where rut = #{rut}
	</select>
</mapper>


